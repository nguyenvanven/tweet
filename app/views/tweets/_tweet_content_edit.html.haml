.c-tweetContentEdit.js-tweetContentEdit{ 'data-id': tweet.id, 'data-parent-id': tweet.parent_tweet_id}
  .c-tweetContentEdit__field
    %textarea.c-tweetContentEdit__textArea.js-tweetEditArea{ 'data-original-text': tweet.content, rows: 4, maxlength: 140 }
      = tweet.content
  .c-tweetContentEdit__actions
    .c-tweetContentEdit__actions-btn
      %a.fa.fa-check.accept.js-saveTweet{ href: '#' }
    .c-tweetContentEdit__actions-btn
      %a.fa.fa-times.danger.js-cancelTweet{ href: '#' }
